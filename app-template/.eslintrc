{
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "WebviewJsBridge": true,
        "$": true,
        "Swiper": true,
        "App": true,
        "define": true
    },
    "parser": "babel-eslint",
    "rules": {
        "semi": [0, "always"],
        "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
        "no-console": [0, { "allow": ["warn", "error"] }],
        "no-multiple-empty-lines": [2, { "max": 1 }]
    }
}
